<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/flowersResource"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Название"
        android:textColor="#45681C"
        android:fontFamily="@font/librebaskerville_bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/flowersResource"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/flowersDescription"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:text="Описание"
        android:fontFamily="@font/librebaskerville_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/flowersResource"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/waterflowers"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:text="График поливки"
        android:fontFamily="@font/librebaskerville_bold"
        app:layout_constraintStart_toEndOf="@+id/flowersResource"
        app:layout_constraintTop_toBottomOf="@+id/flowersDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>